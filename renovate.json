{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "minimumReleaseAge": "3 days",
  "pruneStaleBranches": true,
  "recreateWhen": "always",
  "rebaseWhen": "behind-base-branch",
  "semanticCommits": "enabled",
  "labels": [
    "{{depType}}",
    "datasource::{{datasource}}",
    "type::{{updateType}}",
    "manager::{{manager}}"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^charts/[^/]+/Chart.yaml$"
      ],
      "matchStrings": [
        "version:\\s*\"?(?<currentValue>\\d+\\.\\d+\\.\\d+)\"?"
      ],
      "depNameTemplate": "chart-version-{{{parentDir}}}",
      "datasourceTemplate": "custom.helm",
      "versioningTemplate": "semver"
    }
  ],
  "customDatasources": {
    "helm": {
      "defaultRegistryUrlTemplate": "https://api.github.com/repos/thesoftwaregeek/helm-charts/releases",
      "format": "json",
      "transformTemplates": [
        "{ \"releases\": $map($, function($v) { { \"version\": $substring($v.tag_name, $length($v.tag_name) - 5), \"releaseTimestamp\": $v.published_at, \"changelogUrl\": $v.html_url } }) }"
      ]
    }
  },
  "packageRules": [
    {
      "matchFileNames": [
        "charts/**"
      ],
      "versioning": "semver",
      "ignoreUnstable": true,
      "rangeStrategy": "bump",
      "separateMinorPatch": true,
      "separateMajorMinor": true,
      "ignoreDeprecated": true,
      "minimumReleaseAge": "3 days",
      "matchPackageNames": [
        "/.*/"
      ]
    },
    {
      "matchDatasources": [
        "helm",
        "docker"
      ],
      "ignoreUnstable": true
    },
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "bumpVersion": "patch",
      "semanticCommitScope": "charts",
      "matchPackageNames": [
        "/^chart-version-/"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor"
      ],
      "bumpVersion": "minor",
      "semanticCommitScope": "charts",
      "matchPackageNames": [
        "/^chart-version-/"
      ]
    },
    {
      "matchUpdateTypes": [
        "major"
      ],
      "bumpVersion": "major",
      "semanticCommitScope": "charts",
      "matchPackageNames": [
        "/^chart-version-/"
      ]
    }
  ]
}
