{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    "helpers:pinGitHubActionDigestsToSemver"
  ],
  "minimumReleaseAge": "3 days",
  "pruneStaleBranches": true,
  "recreateWhen": "always",
  "rebaseWhen": "behind-base-branch",
  "semanticCommits": "enabled",
  "labels": [
    "{{depType}}",
    "datasource::{{datasource}}",
    "type::{{updateType}}",
    "manager::{{manager}}"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^charts/[^/]+/Chart.yaml$"
      ],
      "matchStrings": [
        "version:\\s*\"?(?<currentValue>\\d+\\.\\d+\\.\\d+(?:[-+].*)?)\"?"
      ],
      "depNameTemplate": "{{parentDir}}",
      "datasourceTemplate": "helm",
      "versioningTemplate": "semver"
    }
  ],
  "customDatasources": {
    "helm": {
      "defaultRegistryUrlTemplate": "https://api.github.com/repos/thesoftwaregeek/helm-charts/releases",
      "format": "json",
      "transformTemplates": [
        "{ \"releases\": $map($, function($v) { { \"version\": $substring($v.tag_name, $length($v.tag_name) - 5), \"releaseTimestamp\": $v.published_at, \"changelogUrl\": $v.html_url } }) }"
      ]
    }
  },
  "packageRules": [
    {
      "matchManagers": ["helmv3"],
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["patch"],
      "bumpVersion": "patch",
      "semanticCommitType": "fix",
      "semanticCommitScope": "charts"
    },
    {
      "matchManagers": ["helmv3"],
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["minor"],
      "bumpVersion": "minor",
      "semanticCommitType": "feat",
      "semanticCommitScope": "charts"
    },
    {
      "matchManagers": ["helmv3"],
      "matchDatasources": ["helm"],
      "matchUpdateTypes": ["major"],
      "bumpVersion": "major",
      "semanticCommitType": "feat",
      "semanticCommitScope": "charts"
    }
  ]
}
